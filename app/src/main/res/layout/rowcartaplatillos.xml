<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/fondo_menu_categorias"
    >

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/linearLayout2"

        android:orientation="vertical">

        <View
            android:foregroundGravity="right"
            android:id="@+id/circleView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle"
            />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/nombre"
        style="@style/RowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:text="nombre" />

    <TextView
        android:id="@+id/descricion"
        style="@style/existencia"
        android:layout_weight="1.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:drawableLeft="@drawable/ic_action_name_palomita_existencia"
        android:text="descricion" />

    <TextView


        style="@style/precio"
        android:layout_width="match_parent"
        android:layout_weight="1.4"
        android:layout_height="wrap_content"
        android:text="$"
        />

    <TextView

        android:id="@+id/precio"
        style="@style/precio"
        android:layout_width="match_parent"
        android:layout_weight="1.15"
        android:layout_height="wrap_content"
        android:text="precio"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:orientation="vertical">

            <TextView

                android:id="@+id/existencia"
                style="@style/RowSubtitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="existencia" />

            <TextView
                android:id="@+id/clasificacion"
                style="@style/RowSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="clasificacion" />

            <TextView
                android:id="@+id/destino"
                style="@style/RowSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="destino" />



            <TextView
                android:id="@+id/tipo"
                style="@style/RowSubtitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="tipo" />

            <TextView
                android:id="@+id/idPlatillo"
                style="@style/RowSubtitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="idPlatillo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnmenos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_quitar"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="21sp"


                />

            <TextView
                android:id="@+id/contador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="0"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnmas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_agregar"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="21sp"

                />

            <Button
                android:id="@+id/btnsend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/ic_menu_send"
                android:backgroundTint="@android:color/holo_blue_light"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>