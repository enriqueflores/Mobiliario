<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ph.mobiliario.EditPerfi.CambiandoDatos"
    tools:showIn="@layout/activity_cambiando_datos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/singleBlogImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"/>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celular:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvCelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexo:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvSexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvFechaNacimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle y Numero:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvCalleNumero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colonia:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvColonia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciudad:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvCiudad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codigo Postal:  "
                    />
                <TextView
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:id="@+id/tvCodigoPostal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvDisplayName"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
